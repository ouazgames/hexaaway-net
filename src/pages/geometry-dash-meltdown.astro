    transform: scale(1.02);
  }

  .article-content {
    margin-top: 3rem;
  }

  .article-content h2 {
    color: var(--cyan);
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--purple);
  }

  .article-content p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .article-content ul {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .article-content li {
    margin-bottom: 0.75rem;
    line-height: 1.8;
  }
</style>
