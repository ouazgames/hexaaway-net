            <RatingWidget rating={4.6} ratingCount={9876} gameName="Geometry Dash Meltdown" />
          </div>
        </header>

        <!-- GAME IFRAME SECTION -->
        <section class="game-iframe-section">
          <GameIframe 
            src="https://geometrydashgame.com/gd-proxy/index.html"
            title="Play Geometry Dash Meltdown Online"
            description="Click the play button above to start playing Geometry Dash Meltdown. Use spacebar, mouse click, or arrow keys to jump. Complete levels by avoiding obstacles and reaching 100%."
