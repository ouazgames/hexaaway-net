  { name: 'Home', url: '/' },
  { name: 'Geometry Dash SubZero', url: '/geometry-dash-subzero/' }
];

const gameSchema = {
  "@context": "https://schema.org",
  "@type": "VideoGame",
  "name": "Geometry Dash SubZero",
  "description": "Play Geometry Dash SubZero online for free. A winter-themed spin-off with icy levels and cool music. Unblocked and ready to play!",
  "genre": ["Platformer", "Rhythm", "Action"],
  "gamePlatform": ["Web Browser", "Online"],
  "applicationCategory": "Game",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  },
