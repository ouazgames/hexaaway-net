---
interface Props {
  rating?: number;
  ratingCount?: number;
  gameName?: string;
}

const { 
  rating = 4.8, 
  ratingCount = 15420,
  gameName = "Geometry Dash"
} = Astro.props;

const fullStars = Math.floor(rating);
const hasHalfStar = rating % 1 >= 0.5;
const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
---

<div class="rating-widget" itemscope itemtype="https://schema.org/AggregateRating">
  <div class="rating-display">
    <div class="stars" aria-label={`Rating ${rating} out of 5 stars`}>
      {Array.from({ length: fullStars }).map(() => (
        <svg class="star filled" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      ))}
      {hasHalfStar && (
        <svg class="star half" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77V2z"/>
        </svg>
      )}
      {Array.from({ length: emptyStars }).map(() => (
        <svg class="star empty" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      ))}
    </div>
    <div class="rating-info">
      <span class="rating-value" itemprop="ratingValue">{rating}</span>
      <span class="rating-separator">/</span>
      <span class="rating-max" itemprop="bestRating">5</span>
      <span class="rating-count">({ratingCount.toLocaleString()} <span itemprop="ratingCount">{ratingCount}</span> ratings)</span>
    </div>
  </div>
  <meta itemprop="itemReviewed" content={gameName} />
  <meta itemprop="worstRating" content="1" />
</div>

<style>
  .rating-widget {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, var(--dark-secondary), var(--black));
    border: 2px solid var(--yellow);
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(246, 214, 12, 0.2);
  }

  .rating-display {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .stars {
    display: flex;
    gap: 0.25rem;
  }

  .star {
    width: 24px;
    height: 24px;
  }

  .star.filled {
    color: var(--yellow);
  }

  .star.half {
    color: var(--yellow);
  }

  .star.empty {
    color: var(--dark-tertiary);
  }

  .rating-info {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    font-weight: 600;
  }

  .rating-value {
    font-size: 1.5rem;
    color: var(--yellow);
  }

  .rating-separator,
  .rating-max {
    font-size: 1.25rem;
    color: var(--text-light);
  }

  .rating-count {
    font-size: 0.9rem;
    color: var(--text-light);
    margin-left: 0.5rem;
  }

  .rating-count span[itemprop] {
    display: none;
  }

  @media (max-width: 768px) {
    .rating-widget {
      flex-direction: column;
      gap: 0.5rem;
      padding: 1rem;
    }

    .rating-display {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
