---
interface Props {
  src: string;
  title: string;
  description: string;
}

const { src, title, description } = Astro.props;
---

<figure class="game-container" itemscope itemtype="https://schema.org/VideoGame">
  <div class="game-wrapper">
    <iframe
      src={src}
      title={title}
      loading="lazy"
      allowfullscreen
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      itemprop="embedUrl"
    ></iframe>
  </div>
  <figcaption itemprop="description">{description}</figcaption>
</figure>

<style>
  .game-container {
    margin: 2rem 0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(122, 48, 255, 0.3);
    border: 2px solid var(--purple);
    background-color: var(--black);
  }

  .game-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    background-color: var(--black);
  }

  .game-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  figcaption {
    padding: 1rem;
    background-color: var(--dark-secondary);
    color: var(--text-light);
    font-size: 0.95rem;
    line-height: 1.6;
    text-align: center;
  }

  @media (max-width: 768px) {
    .game-container {
      margin: 1.5rem 0;
    }

    .game-wrapper {
      padding-bottom: 75%; /* Adjust for mobile */
    }
  }
</style>
